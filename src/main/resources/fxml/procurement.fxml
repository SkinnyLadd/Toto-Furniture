<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" styleClass="procurement-background" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.furnitureshop.ui.controller.ProcurementController">
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" styleClass="header-panel">
            <children>
                <Label styleClass="app-title" text="Furniture Shop Management System">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="20.0" />
                    </HBox.margin>
                </Label>
                <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                    <children>
                        <Label styleClass="user-info" text="Welcome, Admin">
                            <HBox.margin>
                                <Insets right="20.0" />
                            </HBox.margin>
                        </Label>
                    </children>
                </HBox>
            </children>
        </HBox>
    </top>
    <left>
        <VBox prefHeight="708.0" prefWidth="200.0" styleClass="sidebar">
            <children>
                <Button fx:id="dashboardButton" alignment="BASELINE_LEFT" graphicTextGap="10.0" mnemonicParsing="false" onAction="#handleDashboardButtonAction" prefHeight="50.0" prefWidth="200.0" styleClass="sidebar-button" text="Dashboard">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                    <padding>
                        <Insets left="20.0" />
                    </padding>
                </Button>
                <Button fx:id="inventoryButton" alignment="BASELINE_LEFT" graphicTextGap="10.0" mnemonicParsing="false" onAction="#handleInventoryButtonAction" prefHeight="50.0" prefWidth="200.0" styleClass="sidebar-button" text="Inventory">
                    <padding>
                        <Insets left="20.0" />
                    </padding>
                </Button>
                <Button fx:id="salesButton" alignment="BASELINE_LEFT" graphicTextGap="10.0" mnemonicParsing="false" onAction="#handleSalesButtonAction" prefHeight="50.0" prefWidth="200.0" styleClass="sidebar-button" text="Sales">
                    <padding>
                        <Insets left="20.0" />
                    </padding>
                </Button>
                <Button fx:id="procurementButton" alignment="BASELINE_LEFT" graphicTextGap="10.0" mnemonicParsing="false" onAction="#handleProcurementButtonAction" prefHeight="50.0" prefWidth="200.0" styleClass="sidebar-button-active" text="Procurement">
                    <padding>
                        <Insets left="20.0" />
                    </padding>
                </Button>
                <Button fx:id="staffButton" alignment="BASELINE_LEFT" graphicTextGap="10.0" mnemonicParsing="false" onAction="#handleStaffButtonAction" prefHeight="50.0" prefWidth="200.0" styleClass="sidebar-button" text="Staff">
                    <padding>
                        <Insets left="20.0" />
                    </padding>
                </Button>
                <Button fx:id="reportsButton" alignment="BASELINE_LEFT" graphicTextGap="10.0" mnemonicParsing="false" onAction="#handleReportsButtonAction" prefHeight="50.0" prefWidth="200.0" styleClass="sidebar-button" text="Reports">
                    <padding>
                        <Insets left="20.0" />
                    </padding>
                </Button>
            </children>
        </VBox>
    </left>
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" styleClass="procurement-content">
            <content>
                <VBox spacing="20.0">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                            <children>
                                <Label styleClass="section-header" text="Procurement Management">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <HBox alignment="CENTER_RIGHT" spacing="10.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Button fx:id="newPurchaseOrderButton" mnemonicParsing="false" onAction="#handleNewPurchaseOrderButtonAction" styleClass="action-button" text="New Purchase Order" />
                                        <Button fx:id="viewDetailsButton" mnemonicParsing="false" onAction="#handleViewDetailsButtonAction" styleClass="action-button" text="View Details" />
                                        <Button fx:id="receiveItemsButton" mnemonicParsing="false" onAction="#handleReceiveItemsButtonAction" styleClass="action-button" text="Receive Items" />
                                        <Button fx:id="exportButton" mnemonicParsing="false" onAction="#handleExportButtonAction" styleClass="action-button" text="Export" />
                                    </children>
                                </HBox>
                            </children>
                        </HBox>
                        <HBox spacing="10.0">
                            <children>
                                <TextField fx:id="searchField" promptText="Search purchase orders..." HBox.hgrow="ALWAYS" />
                                <ComboBox fx:id="statusFilter" prefWidth="150.0" promptText="Status" />
                                <ComboBox fx:id="supplierFilter" prefWidth="200.0" promptText="Supplier" />
                                <Button fx:id="searchButton" mnemonicParsing="false" onAction="#handleSearchButtonAction" text="Search" />
                                <Button fx:id="resetButton" mnemonicParsing="false" onAction="#handleResetButtonAction" text="Reset" />
                            </children>
                        </HBox>
                        <TableView fx:id="purchaseOrderTable" prefHeight="500.0" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="orderNumberColumn" text="Order Number" />
                                <TableColumn fx:id="supplierColumn" text="Supplier" />
                                <TableColumn fx:id="orderDateColumn" text="Order Date" />
                                <TableColumn fx:id="statusColumn" text="Status" />
                                <TableColumn fx:id="totalAmountColumn" text="Total Amount (PKR)" />
                            </columns>
                        </TableView>
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
